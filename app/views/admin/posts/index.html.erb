<h1>Listing posts</h1>
<% if @posts.empty? %>
No posts found <BR/>
<% else %>
<table width="25%">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Category</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=raw post.title %></td>
    <td><%=raw post.body[0,50] %>...</td>
    <td><%=raw post.category.category_name %></td>
    <td><%= link_to 'Show', [:admin,post] %></td>
    <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
    <td><%= link_to 'Destroy', [:admin,post], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @posts, options = {:previous_label => 'Newer', :page_links => false, :next_label => 'Older', :separator => '&nbsp;/&nbsp;' } %>
<% end %>
<br />
<%= link_to 'New post', new_admin_post_path %>
